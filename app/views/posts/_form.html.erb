<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="thumbnail-create">

				<h2>Fill out the form<h2>
					
				<%= form_for @post do |f| %>
					<%= f.text_field :title, class: "form-control", placeholder: "Post Title" %><br>
					<%= f.text_area :description, class: "form-control" , placeholder: "Describe your photo and camera settings..." %> <br>
			    <%= f.file_field :image %><br>
			    <%= f.submit "Submit Post", class: "btn btn-primary btn-md" %>
				<% end %>

			</div>
		</div>
	</div>
</div>